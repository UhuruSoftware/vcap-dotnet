<?xml version="1.0"?>
<configuration>
  <configSections>
    <section name="uhuru" type="Uhuru.Configuration.UhuruSection, Uhuru.Configuration"/>
    <section name="nlog" type="NLog.Config.ConfigSectionHandler, NLog"/>
  </configSections>

  <uhuru configSource="uhuru.config"/>
  
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
    <targets>
      <target name="file" xsi:type="AsyncWrapper">
        <target xsi:type="File" fileName="${basedir}/log/mssql_backup.txt" archiveNumbering="Rolling" archiveEvery="None" maxArchiveFiles="10" archiveAboveSize="10485760" />
      </target>
    </targets>

    <rules>
      <logger name="*" minlevel="Debug" writeTo="file"/>
    </rules>
  </nlog>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.0"/>
  </startup>
</configuration>
